<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ii.a2017.arqsoft.minidrive.com.mini_drive.ShareActivity"
    tools:showIn="@layout/activity_share">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="32dp" />

    <ListView
        android:layout_width="340dp"
        android:layout_height="277dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:id="@+id/sharedUsersListView" />

    <EditText
        android:id="@+id/shareUserEditText"
        android:layout_width="342dp"
        android:layout_height="109dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="message"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/sharedUsersListView" />

    <Button
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/shareUserEditText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/shareUserEditText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/shareUserEditText" />
</android.support.constraint.ConstraintLayout>
